<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/no_result_image" android:alpha="0.5"/>
    <TextView
            android:text="No results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/no_result_text" android:textStyle="bold"
            android:textSize="18sp" android:textAlignment="center"/>
</LinearLayout>